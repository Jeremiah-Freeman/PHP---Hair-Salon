<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>List of Stylists</title>
</head>
<body>
    <h1>Stylists Available</h1>

    {% if stylists is not empty %}
        <p>Here are all your stylists:</p>
        <ul>
            {% for stylist in stylists %}
                <li><a href="/viewstylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <div class="container" >
        <form action='/add/stylists' method='post'>
            <label for='name'>Add new stylist: </label>
            <input id='name' name='name' type='text'>
            <button type='submit'>Add</button>
        </form>
    </div>
    <form action='/delete_stylists' method='post'>
        <button type='submit'>Clear</button>
    </form>
    <p><a href='/'>Home</a></p>
</body>
</html>
