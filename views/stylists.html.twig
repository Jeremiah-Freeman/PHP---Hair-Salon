<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
    <title>List of Stylists</title>
</head>
<body>
    <div id="twiglist" class="container">
        <div id="jumb" class="jumbotron">
            <h1>Welcome to Choe Hair Done</h1>
        </div>
        {% if stylists is not empty %}
            <p>Here are all your stylists:</p>
            <ul>
                {% for stylist in stylists %}
                    <li><a href="/viewstylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
        <div id="addclient" class="col-md-4">
            <div class="form-group">
                <form action='/add/stylists' method='post'>
                    <label for='name'>Add new stylist: </label>
                    <input id='name' class="form-control" name='name' type='text'>
                    <button id="add" class="btn btn-primary" type='submit'>Add</button>
                </form>
            </div>
            <form action='/delete_stylists' method='post'>
                <button class="btn btn-primary" type='submit'>Clear</button>
            </form>
        </div>
    </div>
</body>
</html>
